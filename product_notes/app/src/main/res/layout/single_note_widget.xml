<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWidgetBackgroundColor"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.Product_notes.AppWidgetContainer">

    <RelativeLayout
        android:id="@+id/header_single_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_single_note_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#FFAA"
            android:contentDescription="@string/appwidget_text"
            android:padding="8dp"
            android:text="@string/appwidget_text"
            android:textColor="?attr/appWidgetTextColor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/widget_chose_single_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_crop" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_single_note"
        android:layout_margin="@dimen/widget_margin"
        android:background="@color/color_content_widget">


        <TextView
            android:id="@+id/content_single_note_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_single_note"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:contentDescription="@string/appwidget_text"
            android:padding="8dp"
            android:text="Content Note"
            android:textColor="?attr/appWidgetTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/empty_view_single_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="italic" />

    </FrameLayout>


</RelativeLayout>